generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  matches  Match[]
}

model Match {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  active    Boolean  @default(true)
  players   Player[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
